{% include 'simple_content' %}

{% schema %}
{
  "name": "Simple Content",
  "max_blocks": 2,
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "section_description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f7f7f7"
    }
  ],
  "blocks" : [{
      "type": "button",
      "name": "CTA Button",
      "settings": [
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "CTA Text"
        }
      ]
  }],
  "presets": [
    {
      "name": "Simple Content",
      "category": "Custom"
    }
  ]
}
{% endschema %}