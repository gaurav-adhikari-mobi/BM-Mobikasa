<div class="header__wrapper p-{{ section.settings.promobar }}" data-section-id="{{ section.id }}" data-section-type="header">
  <header class="site-header">
    <div style="background-color: #ffffff; height: 100%;">
      <div class="header-wrap">
        <div class="header-logo">
          <a href="/">
            <img class="lazyload" data-src="{{ 'header-logo.svg' | asset_url }}">
          </a>
        </div>
        <nav class="header-subnav">
			<a href="/pages/reviews" class="landing-subnav__link">
				<p>Bear Mattress Reviews</p>
				<img class="lazyload" data-src="//cdn.shopify.com/s/files/1/0661/5815/files/four-half-stars-01.svg?11110635058772024237" />
          	</a>
        </nav>
      </div>
    </div>
  </header>
  <section class="promobar">
    <div class="promobar-wrap promobar-asset">
      <p>{{ section.settings.promobar-text }}</p>
    </div>
  </section>
</div>


