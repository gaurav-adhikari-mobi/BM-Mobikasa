},
{
"type": "header",
"content": "Promo Bar"
},
{
"type": "select",
"id": "promobar",
"label": "Promo Bar Display",
"options": [
{
"value": "show--top",
"label": "Above Nav Bar"
},
{
"value": "show--bottom",
"label": "Below Nav Bar"
},
{
"value": "hide",
"label": "None"
}
]
},
{
"type": "text",
"id": "promobar-text",
"label": "Message"
}
],
"blocks" : [
{
"type": "text",
"name": "Nav Item",
"settings": [
{
"type": "header",
"content": "Nav Bar"
},
{
"type": "text",
"id": "navbar-name",
"label": "Name"
},
{
"type": "text",
"id": "navbar-link",
"label": "Link"
},
{
"type": "header",
"content": "Dropdown Options"
},
{
"type": "checkbox",
"id": "navbar-dropdown",
"label": "Toggle On\/Off Dropdown"
},
{
"type": "link_list",
