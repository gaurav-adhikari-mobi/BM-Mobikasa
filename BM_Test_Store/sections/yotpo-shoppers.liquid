{% if section.settings.Yotpo_enable == true %}
<style>
  .yotpo{
    display: grid;
  }
  .sentence-expanded{
  	margin-top:10px;
  }
  .yotpo-shoppers-say .yotpo-display-wrapper{
  	padding:0 32px;
    margin-bottom: 4rem;
  }
  .yotpo-shoppers-say .shoppers-say-title{
  	 margin-top: 0 !important;
  }
  .yotpo-shoppers-say .yotpo-regular-box {
      width: 47.5%;
      float: left;
      border: 0;
      margin: 0;
  }
  .yotpo-shoppers-say .yotpo-regular-box.no-border-top {
      margin-right: 60px;
   }
  .yotpo-shoppers-say .single-best-sentence .review-stars {
      margin: auto;
      width: auto;
  }
  .yotpo-shoppers-say .yotpo .yotpo-icon {
    font-size: 21.5px;
    height: 20px;
  }
  .yotpo-shoppers-say .shoppers-say-title{
    font-size: 18px;
	font-family: "apercubold", sans-serif;
  	color: rgba(0, 0, 0, 0.54);
    letter-spacing: 0.1px;
    text-transform: uppercase;
    padding: 24px;
  }
  .yotpo-shoppers-say .shoppers-say-title:before{
    content: "";
    width: 100%;
    height: 1px;
    background: rgba(0, 0, 0, 0.12);
    display: block;
    position: absolute;
    left: 0;
    margin-top: -26px;
  }
  .yotpo-shoppers-say .single-best-sentence .sentence{
    font-size: 24px;
    font-family: "apercu", sans-serif;
    font-style: normal !important;
  	color: rgba(0, 0, 0, 0.87);
    letter-spacing: 0.1px;
  }
  .yotpo-shoppers-say .single-best-sentence .display-name{
  	font-size: 16px;
    font-family: "apercu", sans-serif;
    line-height: 1.75;
  	letter-spacing: 0.1px;
    color: rgba(0, 0, 0, 0.54);
  }
  .yotpo-shoppers-say .yotpo-icon-down-arrow, .yotpo-shoppers-say .yotpo-icon-up-arrow{
  	color:#2e577c !important;
  }
  .yotpo-display-wrapper .yotpo-regular-box:nth-of-type(4){
  	display:none;
  }
  .yotpo-shoppers-say  .sentence-expanded .review-title{
    color:rgb(0,0,0,0.87);
    font-size:24px;
  	font-family: "apercu", sans-serif;
    line-height:1.2;
  }
  .yotpo-shoppers-say  .sentence-expanded .full-review{
    font-size: 16px;
    font-family: "apercu", sans-serif;
  }
  .yotpo-shoppers-say  .sentence-expanded .more-reviews{
    color: #1e3d54 !important;
    font-size: 16px;
	font-family: "apercu", sans-serif;
  }
  .yotpo-shoppers-say .single-best-sentence .full-review-background {
    padding: 16px;
    background-color: #eff7f9;
  }
  @media screen and (max-width: 1280px) {
    .yotpo-shoppers-say .yotpo-regular-box {
    	width: 47.2%;
    }
    .yotpo-shoppers-say .yotpo-regular-box.no-border-top {
        margin-right: 52px;
    }
    .yotpo-shoppers-say .shoppers-say-title:before{
    	display:none;
    }
    .yotpo-shoppers-say .shoppers-say-title{
        padding: 0 1.5rem;
      	margin-bottom: 2rem; 
    }
  }
  @media screen and (max-width: 1024px) {
    .yotpo{
      display: inline-table;
    }
    .yotpo-shoppers-say .yotpo-regular-box {
    	width: 100%;
      	margin-bottom: 2rem;
    }
  }
  @media screen and (max-width: 767px) {
  	.yotpo.yotpo-shoppers-say{
      width: 100%;
      display: grid;
      padding-bottom: 16px;
    }
    .yotpo-shoppers-say .yotpo-regular-box {
      width: 100%;
    }
    .yotpo-shoppers-say .yotpo-regular-box.no-border-top {
    	padding-bottom: 0px;
        margin-right: 0;
	}
    .yotpo-display-wrapper .yotpo-regular-box:nth-of-type(4){
      display:block;
    }
    .yotpo-shoppers-say .yotpo-display-wrapper {
    	padding: 2rem 1rem 0;
	    margin-bottom: 3rem;
	}	
  }
</style>

<!-- START  YOTPO REVIEW HIGHLIGHTS -->
<div class="yotpo yotpo-shoppers-say" 
     data-title="What Customers are Saying" 
     data-product-id="{{ product.id }}" 
     data-maximum-reviews-mobile=3 
     data-maximum-reviews-desktop=2>
</div>
<!-- END  YOTPO REVIEW HIGHLIGHTS -->
{% endif %}

{% schema %}
  {
    "name": "Yotpo Shoppers",
    "settings": [
        {
          "type": "checkbox",
          "id": "Yotpo_enable",
          "label": "Show",
		  "default": true
        },
		{
			"type": "color",
			"id": "Yotpo_background_color",
			"label": "Background Color"
		}
	],
	"presets": [
		{
			"name": "Yotpo Shoppers",
			"category": "Text"
		}
	]
  }
{% endschema %}