            "id": "content_cta_text",
            "label": "Section Text"
        },
		{
            "type": "text",
            "id": "mailchimp_cta_link",
            "label": "Section Form action"
        },
        {
            "type": "text",
            "id": "placeholder_text",
            "label": "Section Placeholder Text"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Section submit Text"
        },		
         {
            "type": "color",
            "id": "email_button_color",
            "label": "Section Button Text color"
        },
        {
            "type": "color",
            "id": "email_button_background",
            "label": "Section Button Background color"
        }
	],
	"presets": [
		{
			"name": "Content & Email Form",
