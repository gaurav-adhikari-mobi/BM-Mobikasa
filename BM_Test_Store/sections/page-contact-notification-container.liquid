<div class="notification-wrapper">
	<div class="notification-inner" style="color: {{ section.settings.text_color }}; background-color: {{ section.settings.background_color }};">
		<h2>{{ section.settings.heading }}</h2>
      	{{ section.settings.content }}
  	</div>
</div>

{% schema %}
  {
    "name": "Notification",
    "settings": [
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color"
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "content",
            "label": "Content"
        }
	]
  }
{% endschema %}