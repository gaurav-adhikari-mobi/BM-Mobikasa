{% include 'pdp-accordion' %}

{% schema %}
  {
    "name": "Flex Accordion",
    "settings": [
        {
            "type": "checkbox",
            "id": "show_accordion",
            "label": "Show Accordion Content",
            "default": true
        },
        {
            "type": "color",
            "id": "heading-text-color",
            "label": "Heading Text Color"
        },
        {
            "type": "color",
            "id": "text-color",
            "label": "Paragraph Text Color"
