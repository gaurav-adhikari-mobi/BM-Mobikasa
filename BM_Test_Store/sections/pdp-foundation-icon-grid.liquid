{% include 'sections__pdp-icon-grid' %}

{% schema %}
{
	"name": "PDP Foundation Icon Grid",
	"max_blocks": 4,
	"settings": [
		{
			"type": "header",
			"content": "Toggle"
		},
		{
			"type": "checkbox",
			"id": "toggle",
			"label": "Toggle Section On\/Off"
		},
		{
			"type": "color",
			"id": "background-color",
			"label": "Background Color"
		},
		{
			"type": "color",
			"id": "text-color",
			"label": "Text Color"
		},
		{
			"type": "text",
			"id": "highlighted_text",
			"label": "Footnote Text"
		}
	],
	"blocks": [
		{
			"type": "text",
			"name": "Grid Item",
			"settings": [
				{
					"type": "header",
					"content": "Image"
				},
				{
					"type": "image_picker",
					"id": "icon",
					"label": "Icon"
				},
				{
					"type": "text",
					"id": "icon-svg",
					"label": "SVG File Name"
				},
				{
					"type": "select",
					"id": "icon-size",
					"label": "Icon Size",
					"options": [
						{
							"value": "small",
							"label": "Small"
						},
						{
							"value": "medium",
							"label": "Medium"
						},
						{
							"value": "large",
							"label": "Large"
						}
					],
					"default": "medium"
				},
				{
					"type": "text",
					"id": "text",
					"label": "Icon Label"
				}
			]
		}
	]
}{% endschema %}
