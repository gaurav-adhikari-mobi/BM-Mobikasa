<div class="container">

  	<div class="faq-section">

      	<h2 class="pfeatures-title">Frequently Asked Questions</h2>
      
      	{% for block in section.blocks %}

            <div class="accordion {% if section.settings.data_view_type == 'list' %}static-has-type-list{% else %}static-has-type-accordion static-style-icon static-has-icon-{{settings.data_view_icon_position}}{% endif %}">

                <div class="accordion-section">
                  	{% if section.settings.data_view_type == 'list' %}
                    	<span class="accordion-section-title" style="color: {{section.settings.accordion_heading_color}}">{{block.settings.faq_heading}}</span>
                  	{% else %}
	                    <a class="accordion-section-title {% if section.settings.data_view_type == 'accordion' and forloop.index == 1 %}active{% endif %}" style="color: {{section.settings.accordion_heading_color}}" href="javascript:void()" data-href="#accordion-{{forloop.index}}">{{block.settings.faq_heading}}</a>
                  	{% endif %}
                    <div id="accordion-{{forloop.index}}" class="accordion-section-content {% if section.settings.data_view_type == 'accordion' and forloop.index == 1 %}open{% endif %}">
                        <p>{{block.settings.faq_content}}</p>
                    </div>
                </div>
            </div>
      	{% endfor %}
	<div class="flex flex-align-items-center flex-justify-content-center">
		<a class="btn-white btn shadow" href="/apps/help-center">View More FAQ</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "FAQ section",
    "settings": [
        {
            "type": "color",
            "id": "accordion_heading_color",
            "label": "Accordion heading color"
        },
        {
            "type": "select",
            "id": "data_view_type",
            "options": [
                { "value": "list", "label": "List"},
                { "value": "accordion", "label": "Accordion"}
            ],
            "default": "list",
            "label": "Content type"
        },
        {
            "type": "select",
            "id": "data_view_icon_position",
            "options": [
                { "value": "left", "label": "Left"},
                { "value": "right", "label": "Right"}
            ],
            "default": "left",
            "label": "Icon position"
        }
	],
	"blocks": [
		{
            "type": "faqsection",
            "name": "Faq section",
            "settings": [
            	{
                	"id": "faq_heading",
                	"type": "text",
                	"label": "FAQ heading"
                },
                {
                    "id": "faq_content",
                    "type": "textarea",
                    "label": "FAQ content"
                }
            ]
      }
	]
  }
{% endschema %}