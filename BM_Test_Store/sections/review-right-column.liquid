<div class="brands">   

  <h5>{{ section.settings.aside-heading }}</h5>
  <p>{{ section.settings.aside-description }}</p>
  
  <div class="brand-wrapper">

    {% for block in section.blocks %}

    <div class="brand-container">
      {% if block.settings.review_file_background %}
      <img class="lazyload" data-src="{{ block.settings.review_file_background | img_url: 'master' }}">
      {% else %}
      <img class="lazyload" data-src="{{ block.settings.review_background | file_url}}">
      {% endif %}

      <div class="yotpo bottomline get-rating" data-rating="{{block.settings.brand_review_rating}}">
        <div class="yotpo-bottomline star-clickable">
          <span class="yotpo-stars"></span>
          <div class="yotpo-clr"></div>
        </div>
      </div>

      <p class="brand-rating">{{block.settings.brand_review_rating}} out of 5</p>
      <p class="brand-name" >{{block.settings.brand_review_title}}</p>
    </div>
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "Brand Setting",
	"max_blocks": 8,
    "settings": [		
		{
      		"type": "text",
            "id": "aside-heading",
            "label": "Sidebar Heading"
      	 },
		{
      		"type": "text",
            "id": "aside-description",
            "label": "Sidebar Description"
      	 }
	],
	"blocks": [
		{
			"type": "brand",
			"name": "Brand",
			"settings": [
				{
                  "type": "image_picker",
                  "id": "review_file_background",
                  "label": "Brand Image (Raster file)"
               	},
				{
                  "type": "text",
                  "id": "review_background",
                  "label": "Brand Image"
               },
               {
                  "type": "text",
                  "id": "brand_review_rating",
                  "label": "Brand Review Rating"
               },
               {
                  "type": "text",
                  "id": "brand_review_title",
                  "label": "Brand Review Title"
               }
			]
		}
	]
  
    }
{% endschema %}