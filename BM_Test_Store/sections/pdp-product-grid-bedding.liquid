        },
        {
          "type": "color",
          "id": "button-background-color",
          "label": "Background Color"
        },
        {
          "type": "color",
          "id": "button-text-color",
          "label": "Text Color"
        },
        {
          "type": "color",
          "id": "button-border-color",
          "label": "Border Color"
        },
        {
          "type": "checkbox",
          "id": "use-shadow",
          "label": "Use Shadow?",
