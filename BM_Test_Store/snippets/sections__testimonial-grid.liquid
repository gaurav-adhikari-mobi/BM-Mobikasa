<div class="testimonial-grid" data-section-id="{{ section.id }}" data-section-type="testimonial-grid" style="background-color: {{section.settings.background-color}}; color: {{section.settings.text-color}};" data-module="testimonials">
  <h1 class="testimonial-grid__header">{{ section.settings.header }}</h1>
  <div class="testimonial-grid__testimonials-wrapper">
    {% for block in section.blocks %}
      <div class="testimonial-grid__img-wrapper">
        <img class="testimonial-grid__img lazyload" alt="{{ block.settings.main_image_alt }}" data-src="{{ block.settings.main_image | img_url: 'master' }}">
        <p class="testimonial-grid__text">{{ block.settings.text }}</p>
        <p class="testimonial-grid__author">{{ block.settings.author }}</p>
      </div>
    {% endfor %}
  </div>
  <div class="testimonial-grid__slider">
    {% for block in section.blocks %}
      <div class="testimonial-grid__img-wrapper">
        <img class="testimonial-grid__img lazyload" alt="{{ block.settings.main_image_alt }}" data-src="{{ block.settings.main_image | img_url: 'master' }}">
        <p class="testimonial-grid__text">{{ block.settings.text }}</p>
        <p class="testimonial-grid__author">{{ block.settings.author }}</p>
      </div>
    {% endfor %}
  </div>
</div>
