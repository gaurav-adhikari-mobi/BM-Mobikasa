<div class="advantage-grid" data-section-id="{{ section.id }}" data-section-type="advantage-grid" style="background-color: {{section.settings.background-color}}; color: {{section.settings.text-color}};" data-module="advantage">
  <h1 class="advantage-grid__header">{{ section.settings.header }}</h1>
  <div class="advantage-grid__advantages-wrapper">
    {% for block in section.blocks %}
      <div class="advantage-grid__img-wrapper">
        <img class="advantage-grid__img lazyload" data-src="{{ block.settings.main_image | img_url: 'master' }}" alt="{{ block.settings.main_image_alt }}">
        <h5 class="advantage-grid__title">{{ block.settings.title }}</h5>
        <p class="advantage-grid__text">{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
  <div class="advantage-grid__slider">
    {% for block in section.blocks %}
      <div class="advantage-grid__img-wrapper">
        <img class="advantage-grid__img lazyload" data-src="{{ block.settings.main_image | img_url: 'master' }}" alt="{{ block.settings.main_image_alt }}">
        <p class="advantage-grid__title">{{ block.settings.title }}</p>
        <p class="advantage-grid__text">{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>
